{% if post %}
    {% set formTarget = 'refreshOnePost&postId=' ~ post.id %}
    {% set submit = 'Modifier' %}
{% else %}
    {% set formTarget = 'createOnePost' %}
    {% set submit = 'Cr√©er' %}
{% endif %}


<form method="post" action="index.php?action={{ formTarget }}">
    <label for="title">Titre</label>
    <br>
    <input type="text" id="title" name="title" value="{% if post %}{{ post.postTitle }}{% endif %}">
    <br>
    {% if errors.title %}{{ errors.title }}{% endif %}
    <br>
    <label for="content">Contenu</label>
    <br>
    <textarea id="content" name="content">{% if post %}{{ post.postContent }}{% endif %}</textarea>
    <br>
    {% if errors.content %}{{ errors.content }}{% endif %}
    <br>
    <input type="submit" value="{{ submit }}" id="submit" name="submit">
</form>
