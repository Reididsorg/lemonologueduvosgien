{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}

    <div class="wrapper">
        <h1>Connexion</h1>
        <div id="form-login">
            <form method="post" action="index.php?action=login">
                <div class="form-group">
                    <label for="pseudo">Pseudo</label><br>
                    <input class="form-control" type="text" id="pseudo" name="pseudo" value="{% if userForm %}{{ userForm.pseudo }}{% endif %}">
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label><br>
                    <input class="form-control" type="password" id="password" name="password">
                </div>
                {{ include('front/flashes.html.twig') }}
                <input class="btn btn-secondary" type="submit" value="Connexion" id="submit" name="submit">
            </form>
        </div>
    </div>

{% endblock %}