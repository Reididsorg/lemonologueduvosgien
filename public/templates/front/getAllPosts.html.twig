{% extends 'base.html.twig' %}

{% block title%}Accueil{% endblock %}

{% block content %}

    {{ include('front/flashes.html.twig') }}

    <div id="wrapper">

        <h1>ACCUEIL</h1>

        <div id="posts">
            {% if posts is empty %}
                <em>Aucun billet de blog pour le moment.</em>
            {% else %}
                {% for post in posts %}
                    <div>
                        <h2>
                            <a href="index.php?action=getOnePostAndHisComments&postId={{ post.id }}">{{ post.postTitle }}</a>
                        </h2>
                        <p>
                            {{ post.postContent }}
                        </p>
                        <em>({{ post.postDateFr }}) par <strong>{{ post.postAuthor }}</strong></em>
                    </div>
                {% endfor %}
            {% endif %}

        </div>

        {{ include('pagination.html.twig') }}

    </div>

{% endblock %}