{% extends 'base.html.twig' %}

{% block title%}Accueil{% endblock %}

{% block content %}

    {{ include('front/flashes.html.twig') }}

    <div id="wrapper">

        <h1>ACCUEIL</h1>

        <div id="posts">

            {% for post in posts %}
                <div>
                    <h2>
                        <a href="index.php?action=getOnePostAndHisComments&postId={{ post.id }}">{{ post.postTitle }}</a>
                    </h2>
                    <p>
                        {{ post.postContent }}
                    </p>
                    <em>({{ post.postDateFr }}) par <strong>{{ post.postAuthor }}</strong></em>
                </div>
            {% endfor %}

            {% if session.get('roleName') == 'admin' %}
                <p>
                    <a href="index.php?action=createOnePost">Ajouter un article</a>
                </p>
            {% endif %}

        </div>

        {{ include('pagination.html.twig') }}

    </div>

{% endblock %}